{
    "name": "dsave",
    "displayName": "dsave",
    "description": "hook save for json to xml serialization",
    "version": "1.0.1",
    "publisher": "dcarroll",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.saveMe",
        "onCommand:workbench.action.files.save",
        "onCommand:extension.convertToJson"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": [
            {
                "title": "json directory",
                "type": "object",
                "properties": {
                    "dsave.jsonDir": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "Root of json files",
                        "default": "jsonsource"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.saveMe",
                "title": "Save Me"
            },
            {
                "command": "extension.convertToJson",
                "title": "Convert to JSON"
            },
            {
                "command": "extension.convertToXml",
                "title": "Convert to Xml"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "**/*.field-meta.json",
                "url": "https://s3-us-west-2.amazonaws.com/djcarroll/schemas/metadata/CustomFieldSchema.json"
            },
            {
                "fileMatch": "**/*scratch-def.json",
                "url": "https://s3-us-west-2.amazonaws.com/djcarroll/schemas/sfdx/scratch-def-schema.json"
            },
            {
                "fileMatch": "**/sfdx-project.json",
                "url": "https://s3-us-west-2.amazonaws.com/djcarroll/schemas/sfdx/project-def-schema.json"
            },
            {
                "fileMatch": "**/*.listView-meta.json",
                "url": "https://s3-us-west-2.amazonaws.com/djcarroll/schemas/metadata/ListViewSchema.json"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "electron-rebuild": "^1.6.0",
        "eslint": "^4.6.1",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "xml2json": "^0.11.0"
    },
    "dependencies": {
        "node-expat": "^2.3.16",
        "xml2json": "^0.11.0"
    }
}
